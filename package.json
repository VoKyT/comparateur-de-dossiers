{
  "name": "comparateur-de-dossiers",
  "version": "1.1.0",
  "description": "Application Electron pour comparer le contenu de dossiers",
  "main": "dist/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run vite:dev\" \"npm run electron:dev\" --names \"VITE,ELECTRON\" --prefix-colors \"blue,green\" --kill-others-on-fail",
    "vite:dev": "vite --mode development --host",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "preview": "vite preview",
    "start": "npm run build && electron .",
    "start:dev": "npm run build && set NODE_ENV=development && electron .",
    "electron:dev": "wait-on http://localhost:3000 && set NODE_ENV=development && electronmon --watch=src/electron --ignore=dist .",
    "start:build": "npm run build && electron .",
    "clean": "rimraf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VoKyT/comparateur-de-dossiers.git"
  },
  "keywords": [
    "electron",
    "comparateur",
    "dossiers",
    "fichiers",
    "synchronisation",
    "desktop-app"
  ],
  "author": "VoKyT",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VoKyT/comparateur-de-dossiers/issues"
  },
  "homepage": "https://github.com/VoKyT/comparateur-de-dossiers#readme",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "autoprefixer": "^10.4.21",
    "buffer": "^6.0.3",
    "concurrently": "^9.2.0",
    "electron": "^37.3.1",
    "electronmon": "^2.0.3",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "process": "^0.11.10",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.4",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.vokyt.comparateur-de-dossiers",
    "productName": "Comparateur de Dossiers",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "lucide-react": "^0.540.0",
    "tailwind-merge": "^3.3.1"
  }
}
