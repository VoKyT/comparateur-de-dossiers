{
  "name": "comparateur-de-dossiers",
  "version": "1.1.0",
  "description": "Application Electron pour comparer le contenu de dossiers",
  "main": "dist/main/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "electron .",
    "start:build": "npm run build && electron .",
    "clean": "rimraf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VoKyT/comparateur-de-dossiers.git"
  },
  "keywords": [
    "electron",
    "comparateur",
    "dossiers",
    "fichiers",
    "synchronisation",
    "desktop-app"
  ],
  "author": "VoKyT",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VoKyT/comparateur-de-dossiers/issues"
  },
  "homepage": "https://github.com/VoKyT/comparateur-de-dossiers#readme",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "autoprefixer": "^10.4.21",
    "buffer": "^6.0.3",
    "concurrently": "^9.2.0",
    "electron": "^37.3.1",
    "postcss": "^8.5.6",
    "process": "^0.11.10",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.vokyt.comparateur-de-dossiers",
    "productName": "Comparateur de Dossiers",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    }
  }
}
